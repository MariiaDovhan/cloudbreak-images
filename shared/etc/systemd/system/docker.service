[Unit]
Description=Docker Application Container Engine
Documentation=https://docs.docker.com
After=network.target docker.socket waagent.service
Requires=docker.socket
Wants=cloud-final.service waagent.service

[Service]
ExecStart=/usr/bin/docker daemon -H fd:// -H tcp://0.0.0.0:2376 --selinux-enabled=false --storage-driver=overlay
MountFlags=slave
LimitNOFILE=200000
LimitNPROC=16384
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
