{
  "variables": {
    "mock": "{{ env `MOCK` }}",

    "aws_access_key": "{{ env `AWS_ACCESS_KEY` }}",
    "aws_secret_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",

    "hdc_cli_version": "{{ env `HDC_CLI_VERSION`}}",
    "github_token": "{{ env `GITHUB_TOKEN`}}",
    "cbd_install_dir": "/bin",
    "cbd_version": "{{ env `CBD_VERSION`}}",
    "os_user": "cloudbreak",
    "atlas_artifact": "cbd",
    "image_name": "{{ env `BASE_NAME`}}-{{ env `CBD_VERSION_UNDERSCORE`}}-{{ isotime \"2006-01-02-15-04\" }}{{env `IMAGE_NAME_SUFFIX`}}",

    "instance_type": "m3.medium",

    "ami-eu-west-1": "ami-b0ac25c3"
  },
  "builders":[
  {
    "name": "amazon-linux",
    "type": "amazon-ebs",
    "region": "eu-west-1",
    "ami_regions": ["ap-southeast-1","ap-southeast-2","eu-central-1","ap-northeast-1","us-east-1","sa-east-1","us-west-1","us-west-2"],
    "ssh_pty" : true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "source_ami": "{{user `ami-eu-west-1`}}",
    "instance_type": "{{ user `instance_type` }}",
    "ssh_username": "{{user `os_user`}}",
    "ami_block_device_mappings": [{
                 "device_name": "/dev/xvda",
                 "volume_type": "gp2",
                 "delete_on_termination": true,
                 "volume_size": 15
            }],
    "launch_block_device_mappings": [{
                "device_name": "/dev/xvda",
                "volume_type": "gp2",
                "delete_on_termination": true,
                "volume_size": 15
            }],
    "user_data_file": "cloud-config.cfg",
    "tags": {
      "builder": "packer",
      "cbd_version": "{{user `cbd_version`}}",
      "docker_version": "{{ user `yum_version_docker`}}"
    },
    "ami_groups" :"all",
    "ami_name": "{{ user `image_name`}}"
  }
  ],
  "provisioners": [
  {
      "type": "shell",
      "inline": [
          "set -x",
          "sudo rm -rf /tmp/shared"
      ]
  },
  {
    "type": "file",
    "source": "shared",
    "destination": "/tmp"
  },
  {
      "type": "shell",
      "inline": [
          "sudo yum install -y rsync",
          "sudo rsync -a /tmp/shared/ /"
      ]
  },
  {
      "type": "shell",
      "inline": [
          "sudo yum -y install docker"
      ]
  },
  {
    "type": "shell",
    "scripts": [
        "./cbd-init.sh"
    ],
    "environment_vars": [
        "HDC_CLI_VERSION={{ user `hdc_cli_version` }}",
        "GITHUB_TOKEN={{ user `github_token` }}",
        "CBD_VERSION={{ user `cbd_version` }}",
        "CBD_INSTALL_DIR={{ user `cbd_install_dir` }}",
        "OS_USER={{ user `os_user` }}",
        "PACKER_IMAGE_NAME={{user `image_name`}}"
    ]
  }
  ]
  ,"post-processors": [
    {
      "type": "atlas",
      "artifact": "sequenceiq/{{ user `atlas_artifact` }}",
      "artifact_type": "{{ build_name }}.image",
      "metadata": {
        "created_at": "{{timestamp}}",
        "created" :"{{ isotime \"2006-01-02 15:04:05 -0700\" }}",
        "cbd_version": "{{ user `cbd_version` }}",
        "hdc_cli_version": "{{ user `hdc_cli_version` }}",
        "os_user": "{{user `os_user` }}",
        "os_id": "amzn",
        "image_name": "{{ user `image_name` }}",
        "yum_version_docker": "{{ user `yum_version_docker` }}"
      }
    }
  ]

}
