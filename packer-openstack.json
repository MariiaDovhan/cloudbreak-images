{
  "variables": {
    "os_auth_url": "",
    "os_image_name": "cloudbreak-centos-{{ isotime \"2006-01-02\" }}",
    "os_username": "",
    "os_password": "",
    "os_tenant_name": ""
  },
  "builders": [
    {
      "type": "openstack",
      "username": "{{user `os_username`}}",
      "password": "{{user `os_password`}}",
      "project": "{{user `os_tenant_name`}}",
      "ssh_username": "centos",
      "provider": "{{user `os_auth_url`}}",
      "image_name": "{{user `os_image_name`}}",
      "source_image": "62e6bdfe-3331-4109-a438-126ae2585b5b",
      "flavor": "3",
      "use_floating_ip": false,
      "networks": [
        "26dfdb63-7074-4c71-8f94-d64004e12828"
      ]
    }
  ],
  "provisioners": [{
    "type": "file",
    "source": "scripts/",
    "destination": "/tmp"
  },
  {
    "type": "shell",
    "script": "./user-data-script.sh",
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'"
  }]
}
