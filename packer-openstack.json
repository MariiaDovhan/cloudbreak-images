{
  "variables": {
    "mock": "{{ env `MOCK` }}",
    "atlas_token": "{{ env `ATLAS_TOKEN`}}",
    "atlas_artifact": "cloudbreak",

    "os_user": "cloudbreak",

    "os_auth_url": "{{ env `OS_AUTH_URL` }}",
    "os_image_name": "cloudbreak-{{ isotime \"2006-01-02-03-04\" }}{{env `IMAGE_NAME_SUFFIX`}}",
    "os_username": "{{ env `OS_USERNAME` }}",
    "os_password": "{{ env `OS_PASSWORD` }}",
    "os_tenant_name": "{{ env `OS_TENANT_NAME` }}"
  },
  "builders": [
    {
      "type": "openstack",
      "username": "{{user `os_username`}}",
      "password": "{{user `os_password`}}",
      "tenant_name": "{{user `os_tenant_name`}}",
      "ssh_username": "centos",
      "ssh_pty": "true",
      "image_name": "{{user `os_image_name`}}",
      "source_image": "29ec4393-2f3b-4902-8675-261f3cbedb1f",
      "flavor": "m1.medium",
      "endpoint_type": "internalURL",
      "networks": [
            "a5ad7a1d-d3a6-4180-8d61-07a23f6fb449"
      ]
    }
  ],
  "provisioners": [
      {
        "type": "file",
        "source": "shared",
        "destination": "/tmp"
      },
      {
          "type": "shell",
          "inline": [
            "sudo chown -R root:root /tmp/shared",
            "sudo rsync -a /tmp/shared/pre/ /"]
      },
      {
        "type": "shell",
        "scripts": [
            "./user-data-script.sh"
        ],
        "environment_vars": [
            "OS_USER={{ user `os_user` }}",
            "TRACE=1"
        ],
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'"
      },
      {
        "type": "shell",
        "inline": [
          "sudo chown -R root:root /tmp/shared",
          "sudo rsync -a /tmp/shared/post/ /"
        ]
      }
  ],

  "post-processors": [
    ]
}
