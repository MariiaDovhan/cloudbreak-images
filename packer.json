{
  "variables": {
    "mock": "{{ env `MOCK` }}",
    
    "aws_access_key": "{{ env `AWS_ACCESS_KEY` }}",
    "aws_secret_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
    "gcp_account_file": "{{env `GCP_ACCOUNT_FILE`}}",
    "os_auth_url": "{{ env `OS_AUTH_URL` }}",
    "os_username": "{{ env `OS_USERNAME` }}",
    "os_password": "{{ env `OS_PASSWORD` }}",
    "os_tenant_name": "{{ env `OS_TENANT_NAME` }}",
	"sn" : "{{env `AZURE_SUBSCRIPTION_NAME`}}",
	"psPath" : "{{env `AZURE_PUBLISH_SETTINGS`}}",


    "docker_images": "gliderlabs/alpine:3.1 alpine:latest sequenceiq/mybatis-migrations:1.0.0 sequenceiq/cb-shell:1.2.4",
    "cbd_install_dir": "/bin",
    "cbd_version": "{{ env `CBD_VERSION`}}",
    "os_user": "cloudbreak",
    "atlas_artifact": "cbd",
    "image_name": "cloudbreak-deployer-{{ env `CBD_VERSION_UNDERSCORE`}}-{{ isotime \"2006-01-02\" }}{{env `IMAGE_NAME_SUFFIX`}}",


    "instance_type": "m3.medium",

    "ami-eu-west-1": "ami-60dd5913"
  },
  "builders":[
  {
    "name": "amazon",
    "type": "amazon-ebs",
    "region": "eu-west-1",
    "ami_regions": ["ap-southeast-1","ap-southeast-2","eu-central-1","ap-northeast-1","us-east-1","sa-east-1","us-west-1","us-west-2"],
    "ssh_pty" : true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "source_ami": "{{user `ami-eu-west-1`}}",
    "instance_type": "{{ user `instance_type` }}",
    "ssh_username": "cloudbreak",
    "ami_block_device_mappings": [{
                 "device_name": "/dev/sda1",
                 "volume_type": "gp2",
                 "delete_on_termination": true,
                 "volume_size": 15
            }],
    "launch_block_device_mappings": [{
                "device_name": "/dev/sda1",
                "volume_type": "gp2",
                "delete_on_termination": true,
                "volume_size": 15
            }],
    "tags": {
      "builder": "packer",
      "cbd_version": "{{user `cbd_version`}}",
      "docker_version": "{{ user `yum_version_docker`}}"
    },
    "ami_groups" :"all",
    "ami_name": "{{ user `image_name`}}"
  },
  {
    "disk_size": "40",
    "name": "googlecompute",
    "type": "googlecompute",
    "account_file": "{{user `gcp_account_file`}}",
    "source_image": "docker-centos-2016-03-21",
    "zone": "us-central1-b",
    "project_id": "siq-haas",
    "ssh_username": "cloudbreak",
    "ssh_pty": "true",
    "machine_type": "n1-standard-2",
    "image_name": "{{user `image_name`}}",
    "tags": [
	"packer"
    ]
  },
    {
      "type": "openstack",
      "username": "{{user `os_username`}}",
      "password": "{{user `os_password`}}",
      "tenant_name": "{{user `os_tenant_name`}}",
      "ssh_username": "centos",
      "ssh_pty": "true",
      "image_name": "{{user `image_name`}}",
      "source_image": "c1632189-f509-4dba-ac1a-b08b07920b6d",
      "flavor": "3",
      "use_floating_ip": false,
      "networks": [
        "6414de5e-6085-4469-b8e9-aa293a65c828"
      ]
    }
    ,{
        "name": "azure",
        "type": "azure",
        "ssh_pty": "true",
        "publish_settings_path" : "{{user `psPath`}}",
        "subscription_name": "{{user `sn`}}",
        "storage_account": "02589fae040d8westeurope2",
        "storage_account_container" : "images",
        "os_type": "Linux",
        "os_image_label": "OpenLogic 7.1",
        "location": "West Europe",
        "instance_size": "Large",
        "user_image_label": "{{user `image_name`}}"
    }

  ],
  "provisioners": [
  {
      "type": "shell",
      "inline": [
          "sudo rm -rf /tmp/shared"
      ]
  },
  {
    "type": "file",
    "source": "shared",
    "destination": "/tmp"
  },
  {
      "type": "shell",
      "inline": [
          "sudo yum install -y rsync",
          "sudo rsync -a /tmp/shared/ /"
      ]
  },
  {
    "type": "shell",
    "scripts": [
        "./pull-docker-images.sh",
        "./cbd-init.sh",
        "./create-gc-image.sh"
    ],
    "environment_vars": [
        "CBD_VERSION={{ user `cbd_version` }}",
        "CBD_INSTALL_DIR={{ user `cbd_install_dir` }}",
        "OS_USER={{ user `os_user` }}",
        "YUM_VERSION_DOCKER={{ user `yum_version_docker` }}",
        "YUM_VERSION_KERNEL={{ user `yum_version_kernel` }}",
        "YUM_VERSION_SYSTEMD={{ user `yum_version_systemd` }}",
        "PACKER_IMAGE_NAME={{user `image_name`}}",
        "IMAGES={{ user `docker_images` }}",
        "TRACE=1"
    ],
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'"
  }
  ]
  ,"post-processors": [
    {
      "type": "atlas",
      "artifact": "sequenceiq/{{ user `atlas_artifact` }}",
      "artifact_type": "{{ build_name }}.image",
      "metadata": {
        "created_at": "{{timestamp}}",
        "created" :"{{ isotime \"2006-01-02 15:04:05 -0700\" }}",
        "cbd_version": "{{ user `cbd_version` }}",
        "os_user": "{{user `os_user` }}",
        "image_name": "{{ user `image_name` }}",
        "yum_version_docker": "{{ user `yum_version_docker` }}"
      }
    }
  ]

}
