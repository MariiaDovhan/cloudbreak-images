{
  "variables": {
    "mock": "{{ env `MOCK` }}",

    "aws_access_key": "{{ env `AWS_ACCESS_KEY` }}",
    "aws_secret_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
    "gcp_account_file": "{{env `GCP_ACCOUNT_FILE`}}",
    "os_auth_url": "{{ env `OS_AUTH_URL` }}",
    "os_username": "{{ env `OS_USERNAME` }}",
    "os_password": "{{ env `OS_PASSWORD` }}",
    "os_tenant_name": "{{ env `OS_TENANT_NAME` }}",
    "client_id": "{{ env `ARM_CLIENT_ID` }}",
    "client_secret": "{{ env `ARM_CLIENT_SECRET` }}",
    "subscription_id": "{{ env `ARM_SUBSCRIPTION_ID` }}",
    "tenant_id": "{{ env `ARM_TENANT_ID` }}",
    "resource_group_name": "{{ env `ARM_GROUP_NAME` }}",
    "storage_account": "{{ env `ARM_STORAGE_ACCOUNT` }}",

    "docker_images": "gliderlabs/alpine:3.1 alpine:latest sequenceiq/mybatis-migrations:1.0.0 sequenceiq/cb-shell:1.2.5",
    "cbd_install_dir": "/bin",
    "cbd_version": "{{ env `CBD_VERSION`}}",
    "hdc_cli_version": "{{ env `HDC_CLI_VERSION`}}",
    "os_user": "cloudbreak",
    "atlas_artifact": "cbd",
    "ssh_password":"S3cr3t",
    "image_name": "cloudbreak-deployer-{{ env `CBD_VERSION_UNDERSCORE`}}-{{ isotime \"2006-01-02-15-04\" }}{{env `IMAGE_NAME_SUFFIX`}}",
    "short_image_name": "cbd-{{ env `CBD_VERSION_UNDERSCORE`}}-{{ isotime \"2006-01-02-15-04\" }}{{env `IMAGE_NAME_SUFFIX`}}",


    "instance_type": "m3.medium",

    "ami-eu-west-1": "ami-60dd5913"
  },
  "builders":[
  {
    "name": "amazon",
    "type": "amazon-ebs",
    "region": "eu-west-1",
    "ami_regions": ["ap-southeast-1","ap-southeast-2","eu-central-1","ap-northeast-1","us-east-1","sa-east-1","us-west-1","us-west-2"],
    "ssh_pty" : true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "source_ami": "{{user `ami-eu-west-1`}}",
    "instance_type": "{{ user `instance_type` }}",
    "ssh_username": "{{user `os_user`}}",
    "ami_block_device_mappings": [{
                 "device_name": "/dev/sda1",
                 "volume_type": "gp2",
                 "delete_on_termination": true,
                 "volume_size": 15
            }],
    "launch_block_device_mappings": [{
                "device_name": "/dev/sda1",
                "volume_type": "gp2",
                "delete_on_termination": true,
                "volume_size": 15
            }],
    "tags": {
      "builder": "packer",
      "cbd_version": "{{user `cbd_version`}}",
      "docker_version": "{{ user `yum_version_docker`}}"
    },
    "ami_groups" :"all",
    "ami_name": "{{ user `image_name`}}"
  },
  {
    "disk_size": "40",
    "name": "googlecompute",
    "type": "googlecompute",
    "account_file": "{{user `gcp_account_file`}}",
    "source_image": "docker-centos-2016-03-21",
    "zone": "us-central1-b",
    "project_id": "siq-haas",
    "ssh_username": "{{user `os_user`}}",
    "ssh_pty": "true",
    "machine_type": "n1-standard-2",
    "image_name": "{{user `image_name`}}",
    "tags": [
	"packer"
    ]
  },
    {
      "type": "openstack",
      "username": "{{user `os_username`}}",
      "password": "{{user `os_password`}}",
      "tenant_name": "{{user `os_tenant_name`}}",
      "ssh_username": "centos",
      "ssh_pty": "true",
      "image_name": "{{user `image_name`}}",
      "source_image": "c1632189-f509-4dba-ac1a-b08b07920b6d",
      "flavor": "3",
      "use_floating_ip": false,
      "networks": [
        "6414de5e-6085-4469-b8e9-aa293a65c828"
      ]
    }
     ,{
        "name": "azure-arm",
        "type": "azure-arm",

        "client_id": "{{user `client_id`}}",
        "client_secret": "{{user `client_secret`}}",
        "subscription_id": "{{user `subscription_id`}}",
        "tenant_id": "{{user `tenant_id`}}",

        "resource_group_name": "{{user `resource_group_name`}}",
        "storage_account": "{{user `storage_account`}}",

        "capture_container_name": "packer",
        "capture_name_prefix": "{{ user `short_image_name`}}",

        "custom_image_vhd_uri": "https://sequenceiqnortheurope2.blob.core.windows.net/system/Microsoft.Compute/Images/images/packer-osDisk.a6bfaa30-8de7-4e89-9daa-62cb9057a739.vhd",
        "ssh_pty": "true",
        "username": "{{user `os_user`}}",
        "ssh_password" :"{{user `ssh_password`}}",

        "location": "northeurope",
        "vm_size": "Standard_A2"
    }

  ],
  "provisioners": [
  {
      "type": "shell",
      "execute_command": "sudo -S true <<< '{{ user `ssh_password`}}' ; chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'",
      "scripts": ["./fix-waagent-sudo.sh"]
  },
  {
      "type": "shell",
      "inline": [
          "set -x",
          "sudo rm -rf /tmp/shared"
      ]
  },
  {
    "type": "file",
    "source": "shared",
    "destination": "/tmp"
  },
  {
      "type": "shell",
      "inline": [
          "sudo yum install -y rsync",
          "sudo rsync -a /tmp/shared/ /"
      ]
  },
  {
    "type": "shell",
    "scripts": [
        "./pull-docker-images.sh",
        "./cbd-init.sh",
        "./create-gc-image.sh"
    ],
    "environment_vars": [
        "CBD_VERSION={{ user `cbd_version` }}",
        "HDC_CLI_VERSION={{ user `hdc_cli_version` }}",
        "CBD_INSTALL_DIR={{ user `cbd_install_dir` }}",
        "OS_USER={{ user `os_user` }}",
        "YUM_VERSION_DOCKER={{ user `yum_version_docker` }}",
        "YUM_VERSION_KERNEL={{ user `yum_version_kernel` }}",
        "YUM_VERSION_SYSTEMD={{ user `yum_version_systemd` }}",
        "PACKER_IMAGE_NAME={{user `image_name`}}",
        "IMAGES={{ user `docker_images` }}",
        "TRACE=1"
    ],
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'"
  }
  ]
  ,"post-processors": [
    {
      "type": "atlas",
      "artifact": "sequenceiq/{{ user `atlas_artifact` }}",
      "artifact_type": "{{ build_name }}.image",
      "metadata": {
        "created_at": "{{timestamp}}",
        "created" :"{{ isotime \"2006-01-02 15:04:05 -0700\" }}",
        "cbd_version": "{{ user `cbd_version` }}",
        "hdc_cli_version": "{{ user `hdc_cli_version` }}",
        "os_user": "{{user `os_user` }}",
        "image_name": "{{ user `image_name` }}",
        "yum_version_docker": "{{ user `yum_version_docker` }}"
      }
    }
  ]

}
