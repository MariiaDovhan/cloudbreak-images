{
  "variables": {
    "namesuffix": "{{env `IMAGE_NAME_SUFFIX`}}",
    "version": "0.9",
    "account_file": "{{env `GCE_ACCOUNT_FILE`}}"
  },
  "builders":[{
    "name": "us-central1-b",
    "type": "googlecompute",
    "account_file": "{{user `account_file`}}",
    "source_image": "centos-6-v20150226-rootfs30",
    "zone": "us-central1-b",
    "project_id": "siq-haas",
    "ssh_username": "centos",
    "machine_type": "n1-standard-2",
    "image_name": "packer-cloudbreak-{{ isotime \"2006-01-02\" }}{{user `namesuffix`}}",
    "tags": [
	"packer"
    ]
  }],
  "provisioners": [{
    "type": "file",
    "source": "scripts/",
    "destination": "/tmp"
  },
  {
    "type": "shell",
    "script": "./user-data-script.sh",
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'"
  }],
  "push": {
    "name": "sequenceiq/cbreak-gugli",
    "include": ["user-data-script.sh","{{env `GCE_ACCOUNT_FILE`}}"]
  }
}
