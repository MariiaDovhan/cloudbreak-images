{
	"variables":
	{
		"namesuffix" : "{{env `IMAGE_NAME_SUFFIX`}}",
		"sn" : "{{env `AZURE_SUBSCRIPTION_NAME`}}",
		"psPath" : "{{env `AZURE_PUBLISH_SETTINGS`}}"
	},

	"builders":
	[
		{
			"type"				: "azure",
			"publish_settings_path" 	: "{{user `psPath`}}",
			"subscription_name"		: "{{user `sn`}}",
			"storage_account" 		: "102589fae040d8westeurope",
			"storage_account_container" 	: "images",
			"os_type"			: "Linux",
			"os_image_label"		: "OpenLogic 7.0",
			"location"			: "West Europe",
			"instance_size"			: "Large",
			"user_image_label"		: "packer-cloudbreak-{{ isotime \"2006-01-02\" }}{{user `namesuffix`}}"
		}
	],
  "provisioners": [{
    "type": "file",
    "source": "scripts/",
    "destination": "/tmp"
  },
  {
    "type": "shell",
    "script": "./user-data-script.sh",
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'"
  }]
}
